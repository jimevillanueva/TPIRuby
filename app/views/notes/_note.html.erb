<div style="display:inline-block; margin:10px; padding:10px">
<div class="card" style="padding:15px; max-width:300px;">
<h3 class="text-uppercase"> <%= note.title %> </h3>
<p class="text-secondary"> <%= note.created_at %> </p>
<p> <%= note.content %> </p>
<%= link_to "Editar", edit_book_note_path(@book, note) %>
<%= link_to "Eliminar",note_delete_path(@book, note),
                  method: :delete,
                  data: { confirm: "Are you sure?" }  %>
</div>
</div>